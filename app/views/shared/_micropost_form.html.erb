<%= form_for(@micropost, html: { multipart: true }) do |f| %> <!-- multipart: is necessary for file uploads -->

  <%= render 'shared/error_messages', object: f.object %>

  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new" %>
  </div>

  <%= f.submit "Post", class: "btn btn-primary" %>

  <span class="picture">
    <%= f.file_field :picture %>
  </span>

<% end %>