<h1>New Product</h1>

<%= form_for :product, url: products_path, local: true do |f| %>

  <p>
    <%= f.label :name %>
    <%= f.text_field(:name) %>
  </p>

  <p>
    <%= f.label :price %>
    <%= f.text_field(:price) %>
  </p>

  <p>
    <%= f.label :stock %>
    <%= f.text_field(:stock) %>
  </p>

  <p>
    <%= f.label :category %>
    <%= collection_select(:name_category, 0, Category.all, :id, :name_category)  %>
  </p>

  <p>
    <%= f.label :description %>
    <%= f.text_area(:description) %>
  </p>

  <p>
    <%= f.submit 'Submit' %>
  </p>

<% end %>
