<h1>New Product</h1>

<%= form_for :product, url: products_path do |f| %>

  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@product.errors.count, "error") %>
        Prohibited this article from being saved:
      </h2>
      <ul>
        <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %> %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :name %>
    <%= f.text_field(:name) %>
  </p>

  <p>
    <%= f.label :price %>
    <%= f.text_field(:price) %>
  </p>

  <p>
    <%= f.label :stock %>
    <%= f.text_field(:stock) %>
  </p>

  <p>
    <%= f.label :category %>
    <%= f.collection_select(:name_category, 0, Category.all, :id, :name_category) %>
  </p>

  <p>
    <%= f.label :description %>
    <%= f.text_area(:description) %>
  </p>

  <p>
    <%= f.submit 'Submit' %>
  </p>

<% end %>
